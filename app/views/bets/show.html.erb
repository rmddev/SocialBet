
<div class="col-md-6">
	
	<div class="panel panel-default">
		<div class="panel-heading"><h2>Bet Slip</h2></div><!-- /.panel-heading -->

		<div class="panel-body">
			<%= image_tag @bet.image.url,  class: "img-responsive" %>
		</div><!-- /.panel-body -->

	</div><!-- /.panel panel-default -->

</div><!-- /.col-md-6 -->



<div class="col-md-6">
	
	<div class="panel panel-default">
		<div class="panel-heading">
			<h2>Bet Details</h2>
		</div><!-- /.panel-heading -->

		<div class="panel-body">
			<%= @bet.name %>
			<p class="bet-amount">Bet Amount Placed:<%= number_to_currency(@bet.betamount, unit: "£") %></p><!-- /.bet-amount -->
			<p class="potential-wins">Potential Wins:<%= number_to_currency(@bet.potentialwins, unit: "£") %></p><!-- /.potential-wins -->
		</div><!-- /.panel-body -->

		<div class="panel-footer">
			
			<%= link_to "Place Similar Bet", "", class: "btn btn-primary"  %>

			<div class="pull-right">
				<% if !user_signed_in? %>
					
				<% else %>
					
					<%= link_to like_bet_path(@bet), class: "like", method: :put do  %>
						
						<button class="btn btn-default">
							<span class="glyphicon glyphicon-thumbs-up"></span>

							<span class="badge liked"><%= @bet.get_upvotes.size %></span>
						</button>
					<% end %>

					<%= link_to unlike_bet_path(@bet), class: "like", method: :put do  %>
						
						<button class="btn btn-default">
							<span class="glyphicon glyphicon-thumbs-down"></span>

							<span class="badge unliked"><%= @bet.get_downvotes.size %></span>
						</button>
					<% end %>

				<% end %>
			</div><!-- /.pull-right -->

			<div class="clear"></div>
		</div><!-- /.panel-footer -->

	</div><!-- /.panel -->

	<div class="panel panel-default">
		
		<div class="panel-heading"><h2><%= @bet.user.name %> stats</h2></div><!-- /.panel-heading -->

			<div class="panel-body">

				


			</div><!-- /.panel-body -->



		<div class="panel-footer">
			
			<div class="pull-right">

				<% if user_signed_in? && current_user.id == @bet.user_id %>
					<%= link_to "Edit Bet", edit_bet_path, class: "btn btn-warning"  %>
					<%= link_to "Delete Bet", @bet, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
				<% end %>
			</div><!-- /.pull-right -->

			<div class="clear"></div>

		</div><!-- /.panel-footer -->

	</div><!-- /.panel panel-default -->

</div><!-- /.col-md-8 -->

 