<%=	 simple_form_for @bet, html: {multipart: true} do |f|  %>

		<% if @bet.errors.any? %>

			<div class="errors">
				
				<%= pluralize(@bet.errors.count, "Error") %> Prevented this form from submitting.
				
				<ul>
					<% @bet.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>

			</div><!-- /.errors -->
			
		<% end %>



		<%= f.input :name, input_html: { class: "form-control" }, label: "Name of Bet", placeholder: "First Goalscorer or I'm feeling lucky!" %>
		<%= f.input :image, input_html: { class: "form-control" }, label: "Upload bet slip image" %>
		<%= f.input :betamount, input_html: { class: "form-control" }, label: "Bet Stake", placeholder: "£10" %>
		<%= f.input :potentialwins, input_html: { class: "form-control" }, label: "Expected Returns", placeholder: "£100" %>

		<%= f.button :submit, class: "btn btn-default" %> 
<% end %>